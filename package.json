{
    "name": "glimpse",
    "displayName": "glimpse",
    "description": "Mnemonic key bindings for VSCode commands",
    "version": "0.0.3",
    "publisher": "ieni",
    "license": "MIT",
    "icon": "icon.jpeg",
    "engines": {
        "vscode": "^1.78.0"
    },
    "categories": [
        "Keymaps",
        "Other",
        "Visualization"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "keybindings": [
            {
                "key": "alt+v",
                "command": "glimpse.run"
            },
            {
                "key": "tab",
                "command": "glimpse.triggerKey",
                "args": "\t",
                "when": "glimpseVisible"
            }
        ],
        "commands": [
            {
                "command": "glimpse.run",
                "title": "Glimpse: Run"
            },
            {
                "command": "glimpse.configure",
                "title": "Glimpse: Configure"
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/MarcoIeni/glimpse"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.79.1",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint": "^8.43.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "prettier": "^2.8.8",
        "typescript": "^5.1.3",
        "@vscode/test-electron": "^2.3.2"
    },
    "sponsor": {
        "url": "https://github.com/sponsors/MarcoIeni"
    },
    "pricing": "Free"
}
