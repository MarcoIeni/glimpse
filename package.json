{
    "name": "glimpse",
    "displayName": "Glimpse",
    "description": "Mnemonic key bindings for VSCode commands",
    "version": "0.15.0",
    "publisher": "ieni",
    "license": "MIT",
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.79.0"
    },
    "categories": [
        "Keymaps",
        "Other",
        "Visualization"
    ],
    "bugs": {
        "url": "https://github.com/MarcoIeni/glimpse/issues"
    },
    "activationEvents": [],
    "main": "./dist/extension-node",
    "browser": "./dist/extension-web",
    "contributes": {
        "keybindings": [
            {
                "key": "tab",
                "command": "glimpse.triggerKey",
                "args": "\t",
                "when": "glimpseVisible"
            }
        ],
        "commands": [
            {
                "command": "glimpse.menu",
                "title": "Glimpse: Menu"
            },
            {
                "command": "glimpse.configure",
                "title": "Glimpse: Configure"
            },
            {
                "command": "glimpse.openDocs",
                "title": "Glimpse: Open Docs"
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/MarcoIeni/glimpse"
    },
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "compile": "webpack",
        "watch": "webpack --watch",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts --max-warnings=0",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "node ./out/test/runTest.js",
        "open-in-browser": "vscode-test-web --extensionDevelopmentPath=. .",
        "write-keybindings": "ts-node src/keysToDocs.ts"
    },
    "devDependencies": {
        "@types/vscode": "^1.79.1",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.6",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^7.10.0",
        "@typescript-eslint/parser": "^7.10.0",
        "eslint": "^8.57.0",
        "glob": "^10.3.7",
        "mocha": "^10.4.0",
        "prettier": "^3.2.5",
        "typescript": "^5.4.5",
        "@vscode/test-web": "^0.0.44",
        "@vscode/test-electron": "^2.3.9",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "webpack": "^5.91.0",
        "webpack-cli": "^5.1.4",
        "@types/webpack-env": "^1.18.5",
        "assert": "^2.1.0",
        "process": "^0.11.10"
    },
    "sponsor": {
        "url": "https://github.com/sponsors/MarcoIeni"
    },
    "homepage": "https://glimpse.ieni.dev",
    "pricing": "Free"
}
